#!/usr/bin/env node

// snapshot details about the current repo
// and optionally save them to a file
/* eslint-disable no-console */

const fs = require('fs')
const gitRepoVersion = require('git-repo-version')

const outputFile = (process.argv[2] || '').trim()

let revision = gitRepoVersion()

if (!revision.includes('+') && process.env.SOURCE_VERSION) {
  // TODO: HEROKU_SLUG_COMMIT https://devcenter.heroku.com/articles/dyno-metadata
  // console.log('HEROKU_SLUG_COMMIT', process.env.HEROKU_SLUG_COMMIT)
  // https://stackoverflow.com/questions/26671073/can-the-runtime-of-a-heroku-app-know-its-commit-id/26818886#26818886
  // TODO: https://devcenter.heroku.com/changelog-items/630
  revision += '+' + process.env.SOURCE_VERSION.slice(0, 7)
}

const version = {
  revision,
  date: new Date().toISOString()
}

if (outputFile) {
  fs.writeFileSync(outputFile, JSON.stringify(version))
  console.log('Wrote describe to ' + outputFile)
} else {
  console.log(JSON.stringify(version))
}
